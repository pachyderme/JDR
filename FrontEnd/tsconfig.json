{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core-api": [
        "projects/core/src/public-api"
      ],
      "@fabricjs-editor": [
        "projects/fabricjs-editor/src/public-api"
      ],
      "fabricjs-editor": [
        "dist/fabricjs-editor/fabricjs-editor",
        "dist/fabricjs-editor"
      ],
      "core": [
        "dist/core/core",
        "dist/core"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
